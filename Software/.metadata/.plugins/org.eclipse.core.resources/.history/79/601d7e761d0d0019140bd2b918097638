#include <motor_control.h>

#include "app_i.h"

void app_init()
{
    STATUS status = -1;

    hal_init_raspberryPi();
    status = motor_init();

    /*Enable motor direction control*/
    motor_control_enable();
}

void handlePOSTRequest(POST_DATA *data)
{
    switch(*data)
    {
        case forward:
            break;
        case reverse:
            break;
        case stop:
            break;
        case speed;
            break;
        default:

    }
}
